<Window x:Class="OdinWPF.ProjectSystem.ProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OdinWPF.ProjectSystem"
        mc:Ignorable="d"
        Title="ProjectWindow" Height="450" Width="800">
    <StackPanel>
        <TextBox x:Name="name" Text="Name of the project" FontSize="18" />
        <Button Content="New Step" Click="newStepClick"/>
        <ScrollViewer MaxHeight="200">
            <Grid x:Name="grid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
            </Grid>
        </ScrollViewer>
        <Button Content="Save" Click="saveClick"/>
    </StackPanel>
</Window>
