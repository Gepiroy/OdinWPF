<Window x:Class="OdinWPF.ProjectSystem.StepWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OdinWPF.ProjectSystem"
        mc:Ignorable="d"
        Title="StepWindow" Height="450" Width="800">
    <StackPanel>
        <TextBox x:Name="name" Text="Name of the step" FontSize="18"/>
        <TextBox x:Name="lore" TextWrapping="Wrap" Text="Lore of the step"/>
        <CheckBox x:Name="difficult" Content="Difficult"/>
        <CheckBox x:Name="done" Content="Done"/>
        <Button Content="Done" Click="doneClick"/>
        <Button Content="Save" Click="saveClick"/>

    </StackPanel>
</Window>
